{
  "name": "pandivia",
  "version": "0.28.0",
  "scripts": {
    "start": "npm run app:serve",
    "build": "npm run common:build && npm run ui:build && npm run app:build",
    "app": "npm run app:serve",
    "app:serve": "ng serve --project app",
    "app:build": "ng build --project app --configuration production",
    "app:build:stats": "ng build --project app --configuration production --stats-json",
    "app:test": "ng test --project app",
    "app:lint": "ng lint --project app",
    "app:dist:start": "http-server -p 8080 dist/app/browser",
    "demo": "npm run demo:serve",
    "demo:serve": "ng serve --project demo",
    "demo:build": "ng build --project demo --configuration production",
    "demo:test": "ng test --project demo",
    "demo:lint": "ng lint --project demo",
    "common": "npm run common:watch",
    "common:build": "ng build --project common",
    "common:watch": "ng build --watch --project common",
    "common:test": "nb test --project common",
    "common:lint": "ng lint --project common",
    "ui": "npm run ui:watch",
    "ui:build": "ng build --project ui",
    "ui:watch": "ng build --watch --project ui",
    "ui:test": "nb test --project ui",
    "ui:lint": "ng lint --project ui",
    "firebase:dev": "firebase emulators:start --only firestore,auth --import firebase-testdata",
    "firebase:dev:clean": "firebase emulators:start --only firestore,auth",
    "firebase:dev:export": "firebase emulators:export firebase-testdata",
    "firebase:admin:init": "node ./scripts/init-admin.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.8",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@angular/service-worker": "^21.0.8",
    "@jsverse/transloco": "^8.2.0",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/material-icons": "^33.0.0",
    "focusable-selectors": "^0.8.4",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "~21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@types/jasmine": "~5.1.14",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.2.1",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^5.1.1"
  }
}
